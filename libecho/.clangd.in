# https://clangd.llvm.org/

CompileFlags:
  Add:
  - -I$src_base$
  - -I$out_base$

  - -DECHO_COMPILATION
  - -DLIBGDK_PIXBUF_2_0_SHARED
  - -DLIBGTK_4_SHARED
  - -DLIBPANGOCAIRO_1_0_SHARED
  - -DLIBPANGO_1_0_SHARED
  - -DLIBPANEL_1_0_SHARED

  - -I/usr/include/appstream
  - -I/usr/include/blkid
  - -I/usr/include/cairo
  - -I/usr/include/freetype2
  - -I/usr/include/fribidi
  - -I/usr/include/gdk-pixbuf-2.0
  - -I/usr/include/gio-unix-2.0
  - -I/usr/include/glib-2.0
  - -I/usr/include/graphene-1.0
  - -I/usr/include/gtk-4.0
  - -I/usr/include/harfbuzz
  - -I/usr/include/libadwaita-1
  - -I/usr/include/libmount
  - -I/usr/include/libpeas-2
  - -I/usr/include/libpanel-1
  - -I/usr/include/libpng16
  - -I/usr/include/libxml2
  - -I/usr/include/pango-1.0
  - -I/usr/include/pixman-1
  - -I/usr/include/sysprof-6
  - -I/usr/lib64/glib-2.0/include
  - -I/usr/lib64/graphene-1.0/include

  - -std=gnu23
  - -xc # treat all files as c

  - -Wno-pre-c23-compat
  - -Wno-pre-c11-compat
  - -Wno-declaration-after-statement
  - -Wno-unused-macros
  - -Wno-reserved-identifier
  - -Wno-cast-function-type-strict
  - -Wno-padded
  - -Wno-disabled-macro-expansion
  - -Wno-used-but-marked-unused

  # https://discourse.llvm.org/t/rfc-c-buffer-hardening/65734/85
  #
  - -Wno-unsafe-buffer-usage
